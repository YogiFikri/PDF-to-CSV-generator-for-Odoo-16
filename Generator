        print("\nğŸ“‹ Line Items:")
        for i, item in enumerate(invoice_data['line_items'], 1):
            print(f"   {i}. {item['description']}: IDR {item['amount']:,.2f}")
    
    # Create all import formats
    files_created = []
    
    try:
        # 1. CSV Import (Most reliable)
